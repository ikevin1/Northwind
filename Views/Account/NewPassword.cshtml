@using Northwind.Models
@model NewPassCode

<h2 class="mt-3"><i class="fas fa-sign-in-alt"></i> Enter Your New Password</h2>
<p>Please enter your new password below</p>
<br />
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="NewPassword" method="post">
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="form-group">
        <label asp-for="Token"></label>
        <input asp-for="Token" class="form-control" placeholder="Enter the correct token received via email" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter your Email or User ID" />
    </div>

    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" class="form-control" placeholder="Enter your new password" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter the password" />
    </div>
    <button type="submit" class="btn btn-outline-primary" value="Email Link">Reset</button>

</form>