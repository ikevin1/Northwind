@using Northwind.Models
@model PassCode

<h2 class="mt-3"><i class="fas fa-sign-in-alt"></i>Request Reset Password</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<p> Enter your email or user ID below to receive a password reset link</p><br>
<form asp-action="ForgotPassword" method="post">
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter your Email or User ID" />
    </div>
   
    <button type="submit" class="btn btn-outline-primary" value="Email Link">Request Reset Code</button>
</form>